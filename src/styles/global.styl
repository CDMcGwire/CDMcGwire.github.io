@import "../styles/colors.styl"
@import url('https://fonts.googleapis.com/css2?family=Flamenco&family=Major+Mono+Display&family=Reem+Kufi&family=Sen&family=Spartan&display=swap')

body, p, h1, h2, h3, h4, h5, h6, ul, li
  margin 0
  padding 0

html
  font-family "Sen", sans-serif
  font-size 16pt
  line-height 1.3
  scroll-behavior smooth
  @media screen and (max-width: content-width)
    font-size 14pt

body
  width 100%
  overflow-x hidden

p, li
  max-width 800px

ul
  list-style none

a
  text-decoration none

.col
  display flex
  flex-direction column

.row
  display flex
  flex-direction row